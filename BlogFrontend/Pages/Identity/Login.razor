@page "/login"
@using BlogFrontend.Models
@inject NavigationManager Navigation
@inject HttpClient Http

@code {
    private LoginDto login = new LoginDto();
    private string errorMessage;

    private async Task HandleSubmit()
    {
        try
        {
            var response = await Http.PostAsJsonAsync("/identity/login", login);
            if (response.IsSuccessStatusCode)
            {
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = "Login failed. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }
}

<div class="identity-page">
    <div class="container">
        <div class="identity-wrapper">
            <div class="left-panel">
                <img src="Assets/IMG/LogoImg.png" alt="Logo" />
                <div class="identity-wrap">
                    <h2>Sign In</h2>
                    <EditForm Model="@login" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />

                        <div class="form-group">
                            <label>Email</label>
                            <InputText @bind-Value="login.Email" placeholder="Enter your email" class="form-control" />
                            <ValidationMessage For="@(() => login.Email)" />
                        </div>

                        <div class="form-group">
                            <label>Name</label>
                            <InputText @bind-Value="login.Name" placeholder="Enter your name" class="form-control" />
                            <ValidationMessage For="@(() => login.Name)" />
                        </div>

                        <button class="submit-btn" type="submit">Sign In</button>
                    </EditForm>
                    <div class="social-identity">
                        <button class="google">Sign in with Google</button>
                        <button class="facebook">Sign in with Facebook</button>
                        <button class="apple">Sign in with Apple</button>
                    </div>
                </div>
            </div>
            <div class="right-panel">
                <div class="offer">
                    <h1>Welcome to BLOG!</h1>
                    <p>“is a frequently updated web page used for personal commentary or business content.”</p>
                    <a class="btn" href="/registration">Get Started</a>
                </div>
                <img src="Assets/IMG/identityItem_1.png" alt="" />
                <div class="Copyright">
                    <div>Copyright © 2023</div>
                </div>
            </div>
        </div>
    </div>
</div>
